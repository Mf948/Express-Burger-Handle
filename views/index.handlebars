<h1>burgers!</h1>

<h2>burgers that are not devoured!</h2>

<ul>
  {{#each burgers}}
  {{#unless devoured}}
  {{!-- {{> cat-block}} --}}
  <li>
	{{name}}

	<button class="change-sleep" data-id="{{id}}" data-newsleep="{{sleep}}">
		    Devoured
	</button>

	<button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
</li>
  {{/unless}}
  {{/each}}
</ul>

<h2>burgers that are devoured!</h2>

<ul>
  {{#each burgers}}
  {{#if devoured}}
  {{!-- {{> burgers/cat-block sleep=false}} --}}
  <li>
	{{name}}


	<button class="delete-cat" data-id="{{this.id}}">DELETE!</button>
</li>
  {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form id="create-form">

  <div class="form-group">
    <label for="ca">burger:</label>
    <input type="text" id="ca" name="name">
  </div>


  <button type="submit">Add burger</button>
</form>