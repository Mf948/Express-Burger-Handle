<h1>burgers!</h1>

<h2>burgers that are not devoured!</h2>

<ul>
  {{#each burgers}}
  {{#unless devoured}}
  {{!-- {{> cat-block}} --}}
  <li>
	{{name}}

	<button class="change-sleep" data-id="{{id}}" data-newsleep="{{sleep}}">
		    Devoured
	</button>

	<button class="delete-cat" data-id="{{this.id}}">DELETE!</button>
</li>
  {{/unless}}
  {{/each}}
</ul>

<h2>burgers that are devoured!</h2>

<ul>
  {{#each burgers}}
  {{#if devoured}}
  {{!-- {{> burgers/cat-block sleep=false}} --}}
  <li>
	{{name}}


	<button class="delete-cat" data-id="{{this.id}}">DELETE!</button>
</li>
  {{/if}}
  {{/each}}
</ul>

<h2>Add a Cat</h2>
<form id="create-form">

  <div class="form-group">
    <label for="ca">Cat Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">devoured?</label><br>
    <input type="radio" name="devoured" value="1" id="devoured" checked> devoured!<br>
    <input type="radio" name="devoured" value="0" id="awake"> Awake
  </div>

  <button type="submit">Add Cat</button>
</form>